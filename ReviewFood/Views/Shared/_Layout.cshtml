<style>
    header__search-trigger hide-content header__overlay-close search-submit header__overlay-close .search-is-visible .header__search {
        all: initial;
    }
    .header__search {
        display: block;
        text-align: center;
        background-color: #FFFFFF;
        opacity: 0;
        visibility: hidden;
        position: fixed;
        top: 0px;
        left: 1270px;
        width: 33%;
        height: 40%;
    }
  
</style>

<body id="top">
    <header class="s-header header">
        <div class="header__logo">
            <a class="logo" href="/">REVIEWFOOD</a>
        </div>

        <!-- end header__logo -->
        <a class="header__search-trigger" href="#0"></a>
        <div class="header__search">
            <form role="search" method="get" class="header__search-form" action="/BaiViet/Search">
                <label>
                    @*<span class="hide-content">Search for:</span>*@
                   
                    <input type="search" class="search-field" placeholder="Keywords" value="" name="keywork" title="" autocomplete="off">
                </label>
                <input type="submit" class="search-submit" value="Search">
            </form>
            <a href="#0" title="Close Search" class="header__overlay-close">Close</a>

        </div>

        <a class="header__toggle-menu" href="#0" title="Menu"><span>Menu</span></a>
        @{ Html.RenderAction("MenuView", "Home"); }

    </header>


    @RenderBody()

