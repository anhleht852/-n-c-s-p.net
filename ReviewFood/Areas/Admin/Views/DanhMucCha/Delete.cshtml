@model ReviewFood.Models.DanhMucCha

@{
    ViewBag.Title = "Delete";
    ViewData["TitleHeader"] = "Delete Danh mục";
}


<div>
    <hr />
    <h4 class="delete-title">
        Delete Danh Mục :
        <span class="ten-dm">@Html.DisplayFor(model => model.TenDM)</span>
