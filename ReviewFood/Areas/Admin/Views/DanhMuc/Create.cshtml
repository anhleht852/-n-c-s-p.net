@model ReviewFood.Models.DanhMuc

@{
    ViewData["Title"] = "Create Danh mục";
    ViewData["TitleHeader"] = "Tạo Danh mục 2";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    <div class="form-group">
        <h4>Chọn Danh mục 1</h4>
        <div class="col-md-5">
            @Html.DropDownListFor(model => model.IdDanhMucCha, new SelectList(ViewBag.DanhMucChas, "MaDMCha", "TenDM"), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdDanhMucCha, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        <h5>Tên Danh Mục 2</h5>
        <div class="col-md-5">
            @Html.EditorFor(model => model.TenDanhMuc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger" })
        </div>
    </div>

    @*<div class="form-group">
            Danh mục Cha
            <div class="col-md-10">
                <select class="form-control" id="IdDanhMucCha" name="IdDanhMucCha">
                    <option value="">-- Chọn danh mục cha --</option>
                    @foreach (var danhMucCha in ViewBag.DanhMucChas)
                    {
                        <option value="@danhMucCha.MaDMCha">@danhMucCha.TenDM</option>
                    }
                </select>
                @Html.ValidationMessageFor(model => model.IdDanhMucCha, "", new { @class = "text-danger" })
            </div>
        </div>*@


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay về", "Index")
</div>
@section Scripts {
    @{
        var message_done = ViewBag.Done;
        var message_err = ViewBag.Error;
    }
    <script>
        message_done = '@Html.Raw(message_done)';
        var message_err = '@Html.Raw(message_err)';
        if (message_done != "" && message_done != null) {
            toastr.success(message_done, 'Thành công!');
        } else if (message_err != "" && message_err != null) {
            toastr.error(message_err, 'Lỗi!');
        }
    </script>
}